/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "@tstdl/base/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "useDefineForClassFields": false,
    "paths": {
      "@tstdl/angular/*": [
        "projects/tstdl/angular/lib/*",
      ],
      "@tstdl/angular": [
        "projects/tstdl/angular/lib",
      ],
      "@tstdl/angular/data-card/*": [
        "projects/tstdl/angular/data-card/*",
      ],
      "@tstdl/angular/data-card": [
        "projects/tstdl/angular/data-card",
      ],
      "@tstdl/angular/data-grid/*": [
        "projects/tstdl/angular/data-grid/*",
      ],
      "@tstdl/angular/data-grid": [
        "projects/tstdl/angular/data-grid",
      ],
      "@tstdl/angular/card/*": [
        "projects/tstdl/angular/card/*",
      ],
      "@tstdl/angular/card": [
        "projects/tstdl/angular/card",
      ],
      "@tstdl/angular/react/*": [
        "projects/tstdl/angular/react/*",
      ],
      "@tstdl/angular/react": [
        "projects/tstdl/angular/react",
      ]
    },
    "lib": ["es2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
