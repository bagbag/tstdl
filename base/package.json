{
  "name": "@tstdl/base",
  "version": "0.67.51",
  "author": "Patrick Hein",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ttsc --project tsconfig.json",
    "build:watch": "ttsc --watch",
    "build:prod": "rm -rf dist && npm run build && cp package.json package-lock.json .eslintrc.js tsconfig.server.json dist/ && cp tsconfig.base.json dist/tsconfig.json",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "pub": "npm run build:prod && rm -v dist/test* && npm publish dist/"
  },
  "dependencies": {
    "luxon": "^2",
    "reflect-metadata": "^0.1",
    "rxjs": "^7",
    "zod": "^3.11"
  },
  "devDependencies": {
    "@types/koa__router": "^8.0",
    "@types/luxon": "^2.0",
    "@types/minio": "^7.0",
    "@types/node": ">=16",
    "@types/yup": "0.29",
    "@typescript-eslint/eslint-plugin": "^5.10",
    "@typescript-eslint/parser": "^5.10",
    "eslint": "^8.8",
    "ttypescript": "^1.5",
    "typescript": "^4.5",
    "typescript-transform-paths": "^3.3"
  },
  "peerDependencies": {
    "@tstdl/angular": "^0.6.9",
    "@elastic/elasticsearch": "^7.15",
    "@koa/router": "^10.1",
    "got": "^11.8",
    "koa": "^2.13",
    "minio": "^7.0",
    "mongodb": "4.2",
    "superstruct": "0.15"
  },
  "peerDependenciesMeta": {
    "@tstdl/angular": {
      "optional": true
    }
  }
}
