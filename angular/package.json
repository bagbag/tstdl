{
  "name": "tstdl-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:tailwind && ng serve",
    "build": "ng build @tstdl/angular && npm run build:tailwind",
    "build:stats": "ng build --configuration stats test && npm run analyze:source-maps",
    "build:watch": "ng build @tstdl/angular --watch --configuration development",
    "build:tailwind": "tailwind --config projects/tstdl/angular/tailwind.config.js --output dist/tstdl/angular/tailwind.css && cat dist/tstdl/angular/tailwind.css >> dist/tstdl/angular/styles.css && rm dist/tstdl/angular/tailwind.css",
    "analyze": "npm run build:stats && npm run analyze:source-maps && npm run analyze:webpack-stats",
    "analyze:webpack-stats": "webpack-bundle-analyzer dist/test/stats.json --mode static --report dist/test/webpack-stats.html",
    "analyze:source-maps": "source-map-explorer dist/test/**/*.js --html dist/test/source-map-stats.html && xdg-open dist/test/source-map-stats.html",
    "pub": "npm run build && npm publish dist/tstdl/angular/",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2",
    "@angular/common": "^15.2",
    "@angular/compiler": "^15.2",
    "@angular/core": "^15.2",
    "@angular/forms": "^15.2",
    "@angular/platform-browser": "^15.2",
    "@angular/platform-browser-dynamic": "^15.2",
    "@angular/router": "^15.2",
    "@tstdl/base": "^0.82.0",
    "chroma-js": "^2.4.2",
    "luxon": "^3.2",
    "rxjs": "^7.8",
    "tslib": "^2.5",
    "zone.js": "^0.12"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "15.2",
    "@angular-eslint/builder": "15.2",
    "@angular-eslint/eslint-plugin": "15.2",
    "@angular-eslint/eslint-plugin-template": "15.2",
    "@angular-eslint/schematics": "15.2",
    "@angular-eslint/template-parser": "15.2",
    "@angular/cli": "15.2",
    "@angular/compiler-cli": "15.2",
    "@types/chroma-js": "2.4",
    "@types/luxon": "3.2",
    "@typescript-eslint/eslint-plugin": "5.53",
    "@typescript-eslint/parser": "5.53",
    "eslint": "8.34",
    "ng-packagr": "15.2",
    "source-map-explorer": "2.5",
    "tailwindcss": "3.2",
    "typescript": "4.9",
    "webpack-bundle-analyzer": "4.8"
  }
}
