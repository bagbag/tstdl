{
  "name": "@tstdl/base",
  "version": "0.71.7",
  "author": "Patrick Hein",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ttsc --project tsconfig.json",
    "build:watch": "ttsc --watch",
    "build:prod": "rm -rf dist && npm run build && cp package.json .eslintrc.js tsconfig.server.json dist/ && cp tsconfig.base.json dist/tsconfig.json",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "pub": "npm run build:prod && rm -v dist/test* && npm publish dist/"
  },
  "dependencies": {
    "luxon": "^2",
    "reflect-metadata": "^0.1",
    "rxjs": "^7"
  },
  "devDependencies": {
    "@types/koa__router": "8.0",
    "@types/luxon": "2.3",
    "@types/minio": "7.0",
    "@types/node": ">=16",
    "@types/yup": "0.29",
    "@typescript-eslint/eslint-plugin": "5.20",
    "@typescript-eslint/parser": "5.20",
    "eslint": "8.13",
    "ttypescript": "1.5",
    "typedoc": "0.22",
    "typescript": "4.6",
    "typescript-transform-paths": "3.3"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^8.1",
    "@koa/router": "^10.1",
    "@tstdl/angular": "^0.10",
    "got": "^12.0",
    "koa": "^2.13",
    "minio": "^7.0",
    "mongodb": "4.5",
    "superstruct": "^0.15",
    "undici": "^5.0",
    "urlpattern-polyfill": "^4.0"
  },
  "peerDependenciesMeta": {
    "@tstdl/angular": {
      "optional": true
    }
  }
}
