{
  "name": "@tstdl/base",
  "version": "0.71.62",
  "author": "Patrick Hein",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ttsc --project tsconfig.json",
    "build:watch": "ttsc --watch",
    "build:prod": "rm -rf dist && npm run build && cp package.json .eslintrc.js tsconfig.server.json dist/ && cp tsconfig.base.json dist/tsconfig.json",
    "build:docs": "typedoc",
    "build:docs-watch": "typedoc --watch",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "pub": "npm run build:prod && rm -vf dist/test* && npm publish dist/"
  },
  "dependencies": {
    "luxon": "^2",
    "reflect-metadata": "^0.1",
    "rxjs": "^7",
    "type-fest": "^2"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1",
    "@types/koa__router": "8.0",
    "@types/luxon": "2.3",
    "@types/minio": "7.0",
    "@types/mjml": "4.7",
    "@types/node": ">=16",
    "@types/nodemailer": "^6.4.4",
    "@types/yup": "0.29",
    "@typescript-eslint/eslint-plugin": "5.28",
    "@typescript-eslint/parser": "5.28",
    "eslint": "8.17",
    "ttypescript": "1.5",
    "typedoc": "0.22",
    "typescript": "4.7",
    "typescript-transform-paths": "3.3"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^8.2",
    "@koa/router": "^10.1",
    "@tstdl/angular": "^0.10",
    "chroma-js": "^2.4",
    "got": "^12.1",
    "handlebars": "^4.7",
    "koa": "^2.13",
    "minio": "^7.0",
    "mjml": "^4.12",
    "mongodb": "^4.7",
    "nodemailer": "^6.7",
    "puppeteer": "^14.4.0",
    "superstruct": "^0.16",
    "undici": "^5.5",
    "urlpattern-polyfill": "^4.0"
  },
  "peerDependenciesMeta": {
    "@tstdl/angular": {
      "optional": true
    }
  }
}
