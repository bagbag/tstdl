{
  "name": "@tstdl/base",
  "version": "0.84.27",
  "author": "Patrick Hein",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "concurrently --raw --kill-others npm:tsc:watch npm:tsc-alias:watch",
    "build:production": "rm -rf dist && npm run build && npm run build:production:cjs && npm run build:production:copy-files",
    "build:production:cjs": "esbuild `find dist \\( -name '*.js' -o -name '*.jsx' \\)` --outdir=dist --allow-overwrite --format=cjs",
    "build:production:copy-files": "cp package.json .eslintrc.json tsconfig.server.json dist/ && cp tsconfig.base.json dist/tsconfig.json && sed -i 's/\"type\": \"module\",/\"type\": \"commonjs\",/g' dist/package.json",
    "build:docs": "typedoc",
    "build:docs-watch": "typedoc --watch",
    "lint": "eslint -c .eslintrc.json --ext .ts .",
    "pub": "npm run build:production && rm -vf dist/test* && npm publish dist/",
    "tsc:watch": "tsc --watch",
    "tsc-alias:watch": "tsc-alias --watch"
  },
  "dependencies": {
    "luxon": "^3.3",
    "reflect-metadata": "^0.1",
    "rxjs": "^7.8",
    "type-fest": "^3.11"
  },
  "devDependencies": {
    "@types/chroma-js": "2.4",
    "@types/koa__router": "12.0",
    "@types/luxon": "3.3",
    "@types/minio": "7.1",
    "@types/mjml": "4.7",
    "@types/node": "20",
    "@types/nodemailer": "6.4",
    "@typescript-eslint/eslint-plugin": "5.59",
    "@typescript-eslint/parser": "5.59",
    "concurrently": "8.2",
    "esbuild": "0.18",
    "eslint": "8.42",
    "eslint-import-resolver-typescript": "3.5",
    "eslint-plugin-import": "2.27",
    "tsc-alias": "1.8",
    "typedoc": "0.24",
    "typescript": "5.1"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^8.8",
    "@koa/router": "^12.0",
    "@tstdl/angular": "^0.84",
    "@zxcvbn-ts/core": "^3.0",
    "@zxcvbn-ts/language-common": "^3.0",
    "@zxcvbn-ts/language-de": "^3.0",
    "@zxcvbn-ts/language-en": "^3.0",
    "chroma-js": "^2.4",
    "handlebars": "^4.7",
    "knex": "^2.4",
    "koa": "^2.14",
    "minio": "^7.1",
    "mjml": "^4.14",
    "mongodb": "^5.6",
    "nodemailer": "^6.9",
    "playwright": "^1.35",
    "preact": "^10.15",
    "preact-render-to-string": "^6.1",
    "undici": "^5.22",
    "urlpattern-polyfill": "^9.0"
  },
  "peerDependenciesMeta": {
    "@tstdl/angular": {
      "optional": true
    }
  }
}
