{
  "extends": "@tstdl/base",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "paths": {
      "tstdl-angular": [
        "dist/tstdl-angular/tstdl-angular",
        "dist/tstdl-angular"
      ],
      "@tstdl/base/*": ["node_modules/@tstdl/base/esm/*"]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
