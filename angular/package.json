{
  "name": "tstdl-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build @tstdl/angular && npm run build:scss",
    "build:stats": "ng build --configuration stats test && npm run analyze:source-maps",
    "build:watch": "ng build @tstdl/angular --watch --configuration development",
    "build:scss": "tailwind --config projects/tstdl/angular/tailwind.config.js --output dist/tstdl/angular/tailwind.css && deno run --allow-read --allow-write projects/tstdl/angular/build-scss.ts dist/tstdl/angular/styles.css dist/tstdl/angular/tailwind.css dist/tstdl/angular/styles.scss && rm dist/tstdl/angular/{styles,tailwind}.css",
    "analyze": "npm run build:stats && npm run analyze:source-maps",
    "analyze:source-maps": "source-map-explorer dist/test/**/*.js --html dist/test/source-map-stats.html && xdg-open dist/test/source-map-stats.html",
    "pub": "npm run build && npm publish dist/tstdl/angular/",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1",
    "@angular/cdk": "19.1",
    "@angular/common": "19.1",
    "@angular/compiler": "19.1",
    "@angular/core": "19.1",
    "@angular/forms": "19.1",
    "@angular/material": "19.1",
    "@angular/platform-browser": "19.1",
    "@angular/platform-browser-dynamic": "19.1",
    "@angular/router": "19.1",
    "@preact/signals": "2.0",
    "@tstdl/base": "0.92",
    "bootstrap-icons": "1.11",
    "chroma-js": "2.6",
    "luxon": "3.5",
    "marked": "15.0",
    "ngx-extended-pdf-viewer": "22.2",
    "preact": "10.25",
    "react": "npm:@preact/compat@18.3",
    "react-dom": "npm:@preact/compat@18.3",
    "rxjs": "7.8",
    "tslib": "2.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.1",
    "@angular-eslint/builder": "19.0",
    "@angular-eslint/eslint-plugin": "19.0",
    "@angular-eslint/eslint-plugin-template": "19.0",
    "@angular-eslint/schematics": "19.0",
    "@angular-eslint/template-parser": "19.0",
    "@angular/cli": "19.1",
    "@angular/compiler-cli": "19.1",
    "@stylistic/eslint-plugin": "2.13",
    "@tailwindcss/typography": "0.5",
    "@types/chroma-js": "2.4",
    "@types/luxon": "3.4",
    "@typescript-eslint/eslint-plugin": "8.21",
    "eslint": "8.57",
    "eslint-import-resolver-typescript": "3.7",
    "eslint-plugin-import": "2.31",
    "ng-packagr": "19.1",
    "source-map-explorer": "2.5",
    "tailwindcss": "3.4",
    "typescript": "5.7"
  }
}
