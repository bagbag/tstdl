{
  "name": "@tstdl/base",
  "version": "0.78.0-beta4",
  "author": "Patrick Hein",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ttsc --project tsconfig.json",
    "build:watch": "ttsc --watch",
    "build:prod": "rm -rf dist && npm run build && cp package.json .eslintrc.js tsconfig.server.json dist/ && cp tsconfig.base.json dist/tsconfig.json",
    "build:docs": "typedoc",
    "build:docs-watch": "typedoc --watch",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "pub": "npm run build:prod && rm -vf dist/test* && npm publish dist/"
  },
  "dependencies": {
    "luxon": "^3.0",
    "reflect-metadata": "^0.1",
    "rxjs": "^7.5",
    "type-fest": "^2.18"
  },
  "devDependencies": {
    "@types/chroma-js": "2.1",
    "@types/koa__router": "8.0",
    "@types/luxon": "3.0",
    "@types/minio": "7.0",
    "@types/mjml": "4.7",
    "@types/node": "18",
    "@types/nodemailer": "6.4",
    "@types/yup": "0.29",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "eslint": "8",
    "ttypescript": "1.5",
    "typedoc": "0.23",
    "typescript": "4.7",
    "typescript-transform-paths": "3.3"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^8.2",
    "@koa/router": "^12.0",
    "@tstdl/angular": "^0.11.0-beta4",
    "chroma-js": "^2.4",
    "got": "^12.3",
    "handlebars": "^4.7",
    "koa": "^2.13",
    "minio": "^7.0",
    "mjml": "^4.13",
    "mongodb": "4.9",
    "nodemailer": "^6.7",
    "puppeteer": "^16.2",
    "undici": "^5.9",
    "urlpattern-polyfill": "^4.0"
  },
  "peerDependenciesMeta": {
    "@tstdl/angular": {
      "optional": true
    }
  }
}
